<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Blog | Profile</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
</head>
<body>
  <%- include("navbar", { user: user }) %>
  <p class="text-center" style="color: yellow;"><%= success %></p>
  <div class="container mt-1  " >
    <div class="row py-5 bg-body-secondary">
      <div class="col-md-4 mx-auto">
        <div class="text-center">
          <!-- <img src="https://via.placeholder.com/150" alt="Profile Picture" class="rounded-circle img-thumbnail mb-3" /> -->
          <img src="<%- user.profilePicture %>" alt="Profile Picture" class="rounded-circle img-thumbnail mb-3"  style="width: 30%; height: 150px;" />
          <h4 class="mb-0"><%= user.fullname %></h4>
          <p class="text-muted"><%= user.username %></p>
          <div class="d-flex justify-content-center">
            <button class="btn btn-outline-dark btn-sm">Edit Profile</button>
          </div>
        </div>
      </div>
    </div>
    <section class="text-center mt-3">
      <h4 class="mb-5"><strong>My Posts</strong></h4>
      <div class="row">
        <% blogs.forEach((blog, index) => { %>
          <div class="col-lg-4 col-md-12 mb-4">
            <div class="card">
              <div class="bg-image hover-overlay" data-mdb-ripple-init data-mdb-ripple-color="light">
                <img src="<%= blog.image %>" class="img-fluid" style="width: 100%; height: 250px;" />
                <a href="#!">
                  <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                </a>
              </div>
              <div class="card-body">
                <h4 class="card-title"><%= blog.title %></h4>
                <a href="/blog/<%= blog.id %>" class="btn btn-primary" data-mdb-ripple-init>Read</a>
              </div>
            </div>
          </div>
          <% if ((index + 1) % 3 === 0) { %>
            </div><div class="row">
          <% } %>
        <% }) %>
      </div>
    </section>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
